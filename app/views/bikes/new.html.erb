<div class="container">
  <div class="new-bike-form col-lg-8">
  <h3>List a bike to rent</h3>
  <%= simple_form_for(@bike) do |f| %>
  <%= f.input :name, :placeholder => 'e.g. Red racing bike' %>
  <%= f.input :description, :placeholder => 'e.g. Recently serviced road bike with 55cm frame' %>
  <%= f.input :category, prompt: 'Select category', :collection => ["Mountain Bike", "Road Bike", "BMX", "Commuting Bike", "Fixed Gear", "Tandem", "Tricycle", "Kids Bike"] %>
  <%= f.input :address, input_html: { id: "address-field" } %>
  <%= f.input :price, :label => "Price per day (â‚¬)", input_html: { min: '0', step: 'any' } %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
  <% end %>
  </div>
</div>

